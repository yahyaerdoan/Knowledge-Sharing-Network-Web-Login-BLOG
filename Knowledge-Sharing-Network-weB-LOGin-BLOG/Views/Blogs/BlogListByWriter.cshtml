@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarın Blogları(Sergilenen Gönderilerim)</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Blog İçeriği</th>
        <th>Kategori</th>
        <th>Oluşturma Tarihi</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.BlogId</th>
            <td>@item.BlogTitle</td>
            <td>
              @item.BlogContent.Substring(0, item.BlogContent.Substring(0, 20).LastIndexOf(" ", StringComparison.Ordinal))...
            </td>

            <td>@item.Category.CategoryName</td>
            <td>@(((DateTime)item.BlogCreateDate).ToString("dd MMM, yyyy"))</td>
            <td>
                @if (item.BlogStatus)
                {
                    <span class="badge badge-gradient-success">Aktif</span>
                }
                else
                {
                    <span class="badge badge-gradient-info">Pasif</span>
                }
            </td>
            <td><a href="/Blogs/Delete/@item.BlogId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Blogs/Update/@item.BlogId" class="btn btn-info">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Blogs/Add/" class="btn btn-primary">Yeni Yazı Ekle</a>
