@using EntityLayer.Concrete
@model List<Notification>
@{
    ViewData["Title"] = "AllNotification";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bildirimler Listesi</h4>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> Bildirim Türü </th>
                        <th> Bildirim Ayrıntıları </th>
                        <th> Bildirim Tarihi </th>
                        <th> Bildirim Durumu </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NotificationId</td>
                            <td>@item.NotificationType</td>
                            <td>@item.NotificationDetails</td>
                            <td>@item.NotificationDate.ToShortDateString()</td>
                            <td>@item.NotificationStatus</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
