@using EntityLayer.Concrete
@model List<Message>

@{
    int count = Model.Count();

    string sure = "";
    DateTime now = DateTime.Now;
}

<li class="nav-item dropdown">
    <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
        <i class="mdi mdi-email-outline"></i>
        @if (count != 0)
        {
            <span class="count-symbol bg-warning"></span>
        }
    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
        <h6 class="p-3 mb-0">Messages</h6>
        @if (count != 0)
        {
            @foreach (var item in Model)
            {
                TimeSpan hour = now.Subtract(item.MessageDate);

                if (hour.Days == 0)
                {
                    if (hour.Minutes == 0 && hour.Hours == 0)
                    {
                        sure = "Şimdi";
                    }
                    else if (hour.Minutes > 0 && hour.Hours == 0)
                    {
                        sure = hour.Minutes + " dakika önce";
                    }
                    else
                    {
                        sure = hour.Hours + " saat " + hour.Minutes + " dakika önce";
                    }
                }
                else
                {
                    if (hour.Hours == 0)
                    {
                        sure = hour.Days + " gün önce";
                    }
                    else
                    {
                        sure = hour.Days + " gün " + hour.Hours + " saat önce";
                    }
                }

                <div class="dropdown-divider"></div>
                <a class="dropdown-item preview-item">
                    <div class="preview-thumbnail">
                        <img src="~/writerTema/assets/images/faces/face4.jpg" alt="image" class="profile-pic">
                    </div>
                    <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                        <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.MessageSender mesaj gönderdi.</h6>
                        <p class="text-gray mb-0">
                            @sure 
                        </p>
                        <p class="text-gray mb-0"> @item.MessageDate.ToShortDateString() </p>
                    </div>
                </a>
            }
        }
        else
        {
            <p>Yeni Mesaj Bulunmuyor.</p>
        }


        <div class="dropdown-divider"></div>
        <h6 class="p-3 mb-0 text-center">@Model.Count() yeni mesaj bekliyor</h6>
    </div>
</li>