@using EntityLayer.Concrete
@model List<Blog>

@{
    int i = 0;
}
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 10 Blog</h4> @*//TODO : Son 10 Blog, orderbydesc yapıp bir tag metoduyla çekilebilir. 62. ders ödevi*@
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                        <tr>
                            <th></th>
                            <th> Başlık </th>
                            <th> Kategori </th>
                            <th> Tarih </th>
                            <th> Detaylar </th>
                        </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                i++;
                                <tr>
                                    <th>@i</th>
                                    <td>
                                        <img src="@item.BlogImage" class="mr-2" alt="image">@item.BlogTitle
                                    </td>
                                    <td>
                                        <label class="badge badge-gradient-success w-50">@item.Category.CategoryName</label>
                                    </td>
                                    <td> <label class="badge badge-gradient-info">@(((DateTime) item.BlogCreateDate).ToString("dd MMM, yyyy"))</label> </td>
                                    <td>
                                        <a href="/Blogs/BlogReadAll/@item.BlogId" class="badge badge-gradient-primary">İçeriğe Git</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>